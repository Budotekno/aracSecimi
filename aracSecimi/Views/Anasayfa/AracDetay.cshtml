@model aracSecimi.Models.Siniflar.Arac
@{
    ViewBag.Title = "AracDetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content">
    <div class="row">

        <div class="col-md-12">
            <div class="card">

                <br />

                <div class="card-body">
                    <div class="text-center mb-4">
                        <h2 class="section-title px-5"><span class="px-2">Araç Detay </span></h2>
                    </div>


                    <br />
                    <br />

                    <div class="row">
                        <div class="col-6">
                            <!--
    <img style="box-shadow:2px 2px 10px #000000; border-radius:10px" width="680" src="@ViewBag.FotoUrl" />
        -->

                                    <div id="product-carousel" class="carousel slide" data-ride="carousel">
                                        <div class="carousel-inner ">
                                            <div class="carousel-item active">
                                                <img style="max-height:400px" width="750" src="@ViewBag.FotoUrl" />
                                            </div>
                                            <div class="carousel-item">
                                                <img style="max-height:400px" width="750" src="@ViewBag.FotoUrl2" />
                                            </div>
                                            <div class="carousel-item">
                                                <img style="max-height:400px" width="750" src="@ViewBag.FotoUrl3" />
                                            </div>
                                            <div class="carousel-item">
                                                <img style="max-height:400px" width="750" src="@ViewBag.FotoUrl4" />
                                            </div>
                                            <div class="carousel-item">
                                                <img style="max-height:400px" width="750" src="@ViewBag.FotoUrl5" />
                                            </div>

                                        </div>

                                        <a class="carousel-control-prev" href="#product-carousel" data-slide="prev">
                                            <i class="fa fa-2x fa-angle-left text-white"></i>
                                        </a>
                                        <a class="carousel-control-next" href="#product-carousel" data-slide="next">
                                            <i class="fa fa-2x fa-angle-right text-white"></i>
                                        </a>

                                    </div>
                            

                        </div>
                        <div class="col-6">


                            <div class="table">

                                <table class="table table-striped">
                                    <thead class=" text-primary">


                                    <thead>


                                    <tbody>

                                        <tr>
                                            <td></td>
                                            <th style="width:400px" class="text-primary">Araç No</th>

                                            <td>
                                                @ViewBag.Id
                                            </td>

                                        </tr>

                                        <tr>

                                            <td></td>
                                            <th class=" text-primary">Fiyat</th>

                                            <td>
                                                @ViewBag.Fiyat ₺
                                            </td>

                                        </tr>

                                        <tr>
                                            <td></td>

                                            <th class=" text-primary">Marka</th>

                                            <td>
                                                @ViewBag.Marka
                                            </td>

                                        </tr>

                                        <tr>
                                            <td></td>

                                            <th class=" text-primary">Seri</th>

                                            <td>
                                                @ViewBag.Seri
                                            </td>

                                        </tr>

                                        <tr>

                                            <td></td>
                                            <th class=" text-primary">Model</th>

                                            <td>
                                                @ViewBag.Model
                                            </td>

                                        </tr>

                                        <tr>
                                            <td></td>
                                            <th class=" text-primary">Üretim Yılı</th>

                                            <td>
                                                @ViewBag.UretimYili
                                            </td>

                                        </tr>

                                        <tr>
                                            <td></td>
                                            <th class=" text-primary">Yakıt</th>

                                            <td>
                                                @ViewBag.Yakit
                                            </td>

                                        </tr>

                                        <tr>
                                            <td></td>
                                            <th class=" text-primary">Vites</th>

                                            <td>
                                                @ViewBag.Vites
                                            </td>

                                        </tr>

                                        <tr>
                                            <td></td>
                                            <th class=" text-primary">Araç Km</th>

                                            <td>
                                                @ViewBag.AracKm
                                            </td>

                                        </tr>

                                        <tr>
                                            <td></td>

                                            <th class=" text-primary">Kasa Tipi</th>

                                            <td>
                                                @ViewBag.KasaTipi
                                            </td>

                                        </tr>

                                        <tr>
                                            <td></td>

                                            <th class=" text-primary">Motor Gücü</th>

                                            <td>
                                                @ViewBag.MotorGucu
                                            </td>

                                        </tr>

                                        <tr>
                                            <td></td>

                                            <th class=" text-primary">Motor Hacmi</th>

                                            <td>
                                                @ViewBag.MotorHacmi
                                            </td>

                                        </tr>

                                        <tr>
                                            <td></td>

                                            <th class=" text-primary">Çekiş</th>

                                            <td>
                                                @ViewBag.Cekis
                                            </td>

                                        </tr>


                                        <tr>
                                            <td></td>

                                            <th class=" text-primary">Renk</th>

                                            <td>
                                                @ViewBag.Renk
                                            </td>

                                        </tr>

                                        <tr>
                                            <td></td>

                                            <th class=" text-primary">Yakıt Tüketimi</th>

                                            <td>
                                                @ViewBag.YakitTuketimi
                                            </td>

                                        </tr>

                                        <tr>
                                            <td></td>

                                            <th class=" text-primary">Yakıt Depo Hacmi</th>

                                            <td>
                                                @ViewBag.DepoHacmi
                                            </td>

                                        </tr>

                                        <tr>
                                            <td></td>

                                            <th class=" text-primary">Şehir İçi Tüketim</th>

                                            <td>
                                                @ViewBag.SehirIci
                                            </td>

                                        </tr>

                                        <tr>
                                            <td></td>

                                            <th class=" text-primary">Ortalama Tüketim</th>

                                            <td>
                                                @ViewBag.OrtalamaTuketim
                                            </td>

                                        </tr>

                                        <tr>
                                            <td></td>

                                            <th class=" text-primary">0-100 Km/h</th>

                                            <td>
                                                @ViewBag.Hizlanma0_100
                                            </td>

                                        </tr>

                                        <tr>
                                            <td></td>

                                            <th class=" text-primary">Azami Sürat</th>

                                            <td>
                                                @ViewBag.AzamiSurat
                                            </td>

                                        </tr>

                                        <tr>
                                            <td></td>

                                            <th class=" text-primary">Maksimum Tork</th>

                                            <td>
                                                @ViewBag.MaxTork
                                            </td>

                                        </tr>














                                    </tbody>








                                </table>
                            </div>

                        </div>
                    </div>



                </div>
            </div>
        </div>

    </div>
</div>

<div style="height:75px"></div>



