@using aracSecimi.Models
@model List<Iletisim>


@{
    ViewBag.Title = "Iletisim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"> İletişim</h4>
                </div>
                <div class="card-body">
                    <div class="table">
                        <table class="table">
                            <thead class=" text-primary">

                            <th>#</th>
                            <th>Ad Soyad</th>
                            <th>Mail Adresi</th>
                            <th>Konu</th>
                            <th>Mesaj</th>

                            <th>Sil</th>


                            </thead>


                            <tbody>

                                @foreach (var i in Model)
                                {
                                    <tr>
                                        <td>
                                            @i.Id
                                        </td>
                                        <td>
                                            @i.AdSoyad
                                        </td>
                                        <td>
                                            @i.Mail
                                        </td>
                                        <td>
                                            @i.Konu
                                        </td>
                                        <td>
                                            @i.Mesaj
                                        </td>

                                        <td>
                                            <a href="/Admin/IletisimMesajSil/@i.Id/" class="btn btn-danger">Sil</a>
                                        </td>
                                    </tr>


                                }







                            </tbody>








                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>






