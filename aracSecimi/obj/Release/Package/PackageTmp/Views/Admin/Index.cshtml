@using aracSecimi.Models.Siniflar
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Arac>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/PagedList.css" rel="stylesheet" />


<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"> Araçlar</h4>
                </div>





                <div class="card-body">
                    <div class="table">
                        <table class="table">
                            <thead class=" text-primary">

                            <th>#</th>
                            <th width="250">Fotoğraf</th>
                            <th>Marka</th>
                            <th>Model</th>
                            <th>Sil</th>
                            <th>Güncelle</th>


                            </thead>


                            <tbody>

                                @foreach (var i in Model)
                                {
                                    <tr>
                                        <td>
                                            @i.Id
                                        </td>
                                        <td>
                                            <img width="300" src="@i.FotoUrl" />
                                        </td>
                                        <td>
                                            @i.Marka
                                        </td>
                                        <td>
                                            @i.Model
                                        </td>


                                        <td>
                                            <a href="/Admin/AracSil/@i.Id/" class="btn btn-danger">Sil</a>
                                        </td>

                                        <td>
                                            <a href="/Admin/AracGuncelleId/@i.Id/" class="btn btn-success">Güncelle</a>
                                        </td>

                                    </tr>


                                }







                            </tbody>








                        </table>

                        <div>
                            <a class="btn btn-warning" data-toggle="modal" data-target="#exampleModal">Kullanıcı Ekle</a>
                        </div>

                        @Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))




                    </div>
                </div>
            </div>
        </div>

    </div>
</div>



